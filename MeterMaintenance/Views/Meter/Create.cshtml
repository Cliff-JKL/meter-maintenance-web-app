@model MeterDTO
@{
    ViewData["Title"] = "Create Meter";
}
<h2>Счетчики</h2>
<h4>Создание</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form action="/Meter/Create" method="post">
            <div class="form-group">
                <label class="control-label">Серийный номер</label>
                <input name="SerialNumber" value="@Model.SerialNumber" class="form-control" />
            </div>
            <div class="form-group">
                <form action="/Meter/Create" method="post">
                    <button class="btn btn-primary">Создать</button>
                </form>
            </div>
        </form>
    </div>
</div>