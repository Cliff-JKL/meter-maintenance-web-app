@model MeterReading

<h2>Показания счетчика</h2>
<h4>Ввод</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <label class="control-label">Текущие показания</label>
        <input value="@Model.Value" disabled class="form-control"/>
        <form action="/MeterReading/Update/@Model.Id" method="post">
            @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
            <div class="form-group">
                <label class="control-label">Добавляемое значение</label>
                <input name="Value" value="0" class="form-control"/>
            </div>
            <div class="form-group">
                <input name="ReadingDate" value="@Model.ReadingDate" hidden/>
                <input name="Id" value="@Model.Id" hidden/>
                <input name="MeterId" value="@Model.MeterId" hidden/>
            </div>
            <form action="/MeterReading/Update/@Model.Id" method="post">
                <div class="form-group">
                    <button class="btn btn-primary">Сохранить</button>
                </div>
            </form>
        </form>
    </div>
</div>